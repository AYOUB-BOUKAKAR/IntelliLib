<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.intellilib.controllers.LoginController"
      style="-fx-padding: 20; -fx-background-color: #f5f5f5;">
    
    <Label text="Connexion" style="-fx-font-size: 20; -fx-font-weight: bold;" />
    <TextField fx:id="usernameField" promptText="Nom d'utilisateur" />
    <PasswordField fx:id="passwordField" promptText="Mot de passe" />
    <Button fx:id="loginButton" text="Se connecter" onAction="#login" defaultButton="true" />
    <Label fx:id="errorLabel" style="-fx-text-fill: red;" />
    <Button text="Retour" onAction="#backToMain" style="-fx-background-color: #e0e0e0;" />
    
</VBox>