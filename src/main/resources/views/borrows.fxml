<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.intellilib.controllers.BorrowController">
    <top>
        <Label text="Gestion des Emprunts" style="-fx-font-size: 24px; -fx-padding: 10;"/>
    </top>
    <center>
        <TableView fx:id="borrowTable" prefHeight="400" prefWidth="700">
            <columns>
                <TableColumn text="ID" fx:id="idColumn"/>
                <TableColumn text="Livre" fx:id="bookColumn"/>
                <TableColumn text="Membre" fx:id="memberColumn"/>
                <TableColumn text="Date d'emprunt" fx:id="borrowDateColumn"/>
                <TableColumn text="Date de retour" fx:id="dueDateColumn"/>
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox spacing="10">
            <Button text="Ajouter" fx:id="addButton"/>
            <Button text="Modifier" fx:id="editButton"/>
            <Button text="Supprimer" fx:id="deleteButton"/>
        </HBox>
    </bottom>
</BorderPane>