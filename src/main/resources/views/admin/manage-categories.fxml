<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="10" style="-fx-background-color: #f4f4f4;" xmlns:fx="http://javafx.com/fxml" fx:controller="com.intellilib.controllers.ManageCategoryController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
    </padding>
    
    <!-- Header -->
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Category Management"/>
    
    <!-- Search Bar -->
    <HBox spacing="10">
        <TextField fx:id="searchField" promptText="Search categories..." HBox.hgrow="ALWAYS">
            <padding>
                <Insets bottom="5" left="5" right="5" top="5"/>
            </padding>
        </TextField>
    </HBox>
    
    <!-- Main Content -->
    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <!-- Category Table -->
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label style="-fx-font-weight: bold;" text="Category List"/>
            <TableView fx:id="categoryTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="nameColumn" prefWidth="200" text="Name"/>
                    <TableColumn fx:id="descriptionColumn" prefWidth="300" text="Description"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
        
        <!-- Category Form -->
        <VBox spacing="10" style="-fx-min-width: 300; -fx-pref-width: 300;">
            <Label style="-fx-font-weight: bold;" text="Category Details"/>
            <VBox style="-fx-background-color: white; -fx-padding: 15; -fx-spacing: 10; -fx-background-radius: 5;">
                <Label text="Name*"/>
                <TextField fx:id="nameField" promptText="Enter category name"/>
                
                <Label text="Description"/>
                <TextArea fx:id="descriptionField" promptText="Enter description" wrapText="true" 
                         style="-fx-min-height: 100; -fx-pref-height: 100; -fx-max-height: 200;"/>
                
                <HBox spacing="10" style="-fx-padding: 10 0 0 0;">
                    <Button fx:id="addButton" text="Add" onAction="#handleAddCategory" HBox.hgrow="ALWAYS" 
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                    <Button fx:id="updateButton" text="Update" onAction="#handleUpdateCategory" HBox.hgrow="ALWAYS" 
                            style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                </HBox>
                <HBox spacing="10">
                    <Button fx:id="deleteButton" text="Delete" onAction="#handleDeleteCategory" HBox.hgrow="ALWAYS" 
                            style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
                    <Button fx:id="clearButton" text="Clear" onAction="#handleClearForm" HBox.hgrow="ALWAYS"/>
                </HBox>
            </VBox>
        </VBox>
    </HBox>
    
    <!-- Status Bar -->
    <Label fx:id="statusLabel" style="-fx-text-fill: #2e7d32; -fx-font-style: italic; -fx-padding: 5 0 0 0;"/>
</VBox>