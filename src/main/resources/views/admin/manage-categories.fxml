<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="0" 
      styleClass="root" 
      stylesheets="@/css/style.css" 
      xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.intellilib.controllers.admin.ManageCategoryController">
    
    <!-- Header -->
    <HBox styleClass="site-header" alignment="CENTER_LEFT">
        <VBox spacing="4">
            <Label styleClass="page-title" text="Category Management"/>
            <Label styleClass="page-subtitle" text="Add, edit, and manage book categories"/>
        </VBox>
    </HBox>
    
    <!-- Content Area -->
    <ScrollPane styleClass="content-scroll" fitToWidth="true" VBox.vgrow="ALWAYS">
        <VBox styleClass="content-container" spacing="24">
            
            <!-- Search Bar -->
            <TextField fx:id="searchField" promptText="Search categories by name or description..." 
                       styleClass="form-field" HBox.hgrow="ALWAYS"/>
            
            <!-- Main Content -->
            <HBox spacing="24" VBox.vgrow="ALWAYS">
                <!-- Category Table -->
                <VBox spacing="16" HBox.hgrow="ALWAYS">
                    <Label styleClass="section-title" text="Category List"/>
                    <TableView fx:id="categoryTable" styleClass="data-table" VBox.vgrow="ALWAYS" style="-fx-min-height: 400;">
                        <columns>
                            <TableColumn fx:id="nameColumn" prefWidth="200" text="Name" styleClass="table-column"/>
                            <TableColumn fx:id="descriptionColumn" prefWidth="300" text="Description" styleClass="table-column"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </VBox>
                
                <!-- Category Form -->
                <VBox spacing="16" style="-fx-min-width: 320; -fx-pref-width: 320;">
                    <Label styleClass="section-title" text="Category Details"/>
                    <VBox styleClass="chart-section" spacing="16">
                        <VBox spacing="8">
                            <Label styleClass="form-label" text="Name *"/>
                            <TextField fx:id="nameField" promptText="Enter category name" 
                                       styleClass="form-field"/>
                        </VBox>
                        
                        <VBox spacing="8">
                            <Label styleClass="form-label" text="Description"/>
                            <TextArea fx:id="descriptionField" promptText="Enter description (optional)" wrapText="true" 
                                     styleClass="form-field" style="-fx-min-height: 120;"/>
                        </VBox>
                        
                        <HBox spacing="10">
                            <Button fx:id="addButton" text="Add" styleClass="header-button" 
                                    onAction="#handleAddCategory" HBox.hgrow="ALWAYS"/>
                            <Button fx:id="updateButton" text="Update" styleClass="header-button" 
                                    onAction="#handleUpdateCategory" HBox.hgrow="ALWAYS"/>
                            <Button fx:id="deleteButton" text="Delete" styleClass="header-button" 
                                    onAction="#handleDeleteCategory" HBox.hgrow="ALWAYS"/>
                        </HBox>
                        <HBox spacing="10">
                            <Button fx:id="clearButton" text="Clear" styleClass="header-button" 
                                    onAction="#handleClearForm" HBox.hgrow="ALWAYS"/>
                        </HBox>
                    </VBox>
                </VBox>
            </HBox>
            
            <!-- Status Bar -->
            <Label fx:id="statusLabel" styleClass="stat-change-positive"/>
        </VBox>
    </ScrollPane>
</VBox>