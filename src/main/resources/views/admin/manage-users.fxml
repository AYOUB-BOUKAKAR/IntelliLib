<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="0" 
        styleClass="root" 
        stylesheets="@/css/style.css" 
        xmlns:fx="http://javafx.com/fxml" 
        fx:controller="com.intellilib.controllers.admin.ManageUserController">
    
    <!-- Header -->
    <HBox styleClass="site-header" alignment="CENTER_LEFT">
        <VBox spacing="4">
            <Label styleClass="page-title" text="User Management"/>
            <Label styleClass="page-subtitle" text="Manage library users and permissions"/>
        </VBox>
    </HBox>
    
    <!-- Content Area -->
    <ScrollPane styleClass="content-scroll" fitToWidth="true" VBox.vgrow="ALWAYS">
        <VBox styleClass="content-container" spacing="24">
            
            <!-- Search Bar -->
            <TextField fx:id="searchField" promptText="Search users by username, email, or role..." 
                       style="-fx-background-color: #111111; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #6b7280; -fx-border-color: #1f1f1f; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10 16; -fx-font-size: 14px;"/>
            
            <!-- Main Content -->
            <HBox spacing="24" VBox.vgrow="ALWAYS">
                <!-- User Table -->
                <VBox spacing="16" HBox.hgrow="ALWAYS">
                    <Label styleClass="section-title" text="User List"/>
                    <TableView fx:id="userTable" styleClass="data-table" VBox.vgrow="ALWAYS" style="-fx-min-height: 400;">
                        <columns>
                            <TableColumn fx:id="idColumn" prefWidth="60" text="ID" styleClass="table-column"/>
                            <TableColumn fx:id="usernameColumn" prefWidth="120" text="Username" styleClass="table-column"/>
                            <TableColumn fx:id="emailColumn" prefWidth="200" text="Email" styleClass="table-column"/>
                            <TableColumn fx:id="roleColumn" prefWidth="100" text="Role" styleClass="table-column"/>
                            <TableColumn fx:id="activeColumn" prefWidth="80" text="Active" styleClass="table-column"/>
                            <TableColumn fx:id="lastLoginColumn" prefWidth="140" text="Last Login" styleClass="table-column"/>
                            <TableColumn fx:id="createdAtColumn" prefWidth="140" text="Created At" styleClass="table-column"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </VBox>
                
                <!-- User Form -->
                <VBox spacing="16" style="-fx-min-width: 320; -fx-pref-width: 320;">
                    <Label styleClass="section-title" text="User Details"/>
                    <VBox styleClass="chart-section" spacing="16">
                        <VBox spacing="8">
                            <Label styleClass="stat-label" text="Username"/>
                            <TextField fx:id="usernameField" promptText="Enter username" 
                                       style="-fx-background-color: #0a0a0a; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #6b7280; -fx-border-color: #1f1f1f; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10 12; -fx-font-size: 13px;"/>
                        </VBox>
                        
                        <VBox spacing="8">
                            <Label styleClass="stat-label" text="Password"/>
                            <PasswordField fx:id="passwordField" promptText="Enter password" 
                                           style="-fx-background-color: #0a0a0a; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #6b7280; -fx-border-color: #1f1f1f; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10 12; -fx-font-size: 13px;"/>
                        </VBox>
                        
                        <VBox spacing="8">
                            <Label styleClass="stat-label" text="Email"/>
                            <TextField fx:id="emailField" promptText="Enter email" 
                                       style="-fx-background-color: #0a0a0a; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #6b7280; -fx-border-color: #1f1f1f; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10 12; -fx-font-size: 13px;"/>
                        </VBox>
                        
                        <VBox spacing="8">
                            <Label styleClass="stat-label" text="Role"/>
                            <ComboBox fx:id="roleComboBox" 
                                      style="-fx-background-color: #0a0a0a; -fx-text-fill: #ffffff; -fx-border-color: #1f1f1f; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 6 12;"/>
                        </VBox>
                        
                        <VBox spacing="8">
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <CheckBox fx:id="activeCheckBox" text="Active" 
                                          style="-fx-text-fill: #d1d5db;"/>
                            </HBox>
                        </VBox>
                        
                        <HBox spacing="10">
                            <Button fx:id="addButton" text="Add" styleClass="header-button" onAction="#handleAddUser" HBox.hgrow="ALWAYS"/>
                            <Button fx:id="updateButton" text="Update" styleClass="header-button" onAction="#handleUpdateUser" HBox.hgrow="ALWAYS"/>
                            <Button fx:id="deleteButton" text="Delete" styleClass="header-button" onAction="#handleDeleteUser" HBox.hgrow="ALWAYS"/>
                        </HBox>
                        <HBox spacing="10">
                            <Button fx:id="clearButton" text="Clear" styleClass="header-button" onAction="#handleClearForm" HBox.hgrow="ALWAYS"/>
                            <Button fx:id="toggleStatusButton" text="Toggle Status" styleClass="header-button" onAction="#handleToggleStatus" HBox.hgrow="ALWAYS"/>
                        </HBox>
                    </VBox>
                </VBox>
            </HBox>
            
            <!-- Status Bar -->
            <Label fx:id="statusLabel" styleClass="stat-change-positive"/>
        </VBox>
    </ScrollPane>
</VBox>