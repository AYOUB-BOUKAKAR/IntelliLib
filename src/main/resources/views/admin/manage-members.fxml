<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="10" style="-fx-background-color: #f4f4f4;" xmlns:fx="http://javafx.com/fxml" fx:controller="com.intellilib.controllers.ManageMemberController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
    </padding>
    
    <!-- Header -->
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Member Management"/>
    
    <!-- Search Bar -->
    <HBox spacing="10">
        <TextField fx:id="searchField" promptText="Search members..." HBox.hgrow="ALWAYS">
            <padding>
                <Insets bottom="5" left="5" right="5" top="5"/>
            </padding>
        </TextField>
    </HBox>
    
    <!-- Main Content -->
    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <!-- Member Table -->
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label style="-fx-font-weight: bold;" text="Member List"/>
            <TableView fx:id="memberTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="nameColumn" prefWidth="200" text="Full Name"/>
                    <TableColumn fx:id="emailColumn" prefWidth="200" text="Email"/>
                    <TableColumn fx:id="phoneColumn" prefWidth="120" text="Phone"/>
                    <TableColumn fx:id="statusColumn" prefWidth="80" text="Status"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
        
        <!-- Member Form -->
        <VBox spacing="10" style="-fx-min-width: 300; -fx-pref-width: 300;">
            <Label style="-fx-font-weight: bold;" text="Member Details"/>
            <VBox style="-fx-background-color: white; -fx-padding: 15; -fx-spacing: 10; -fx-background-radius: 5;">
                <Label text="Full Name*"/>
                <TextField fx:id="nameField" promptText="Enter full name"/>
                
                <Label text="Email*"/>
                <TextField fx:id="emailField" promptText="Enter email"/>
                
                <Label text="Phone*"/>
                <TextField fx:id="phoneField" promptText="Enter phone number"/>
                
                <Label text="Address"/>
                <TextField fx:id="addressField" promptText="Enter address"/>
                
                <HBox spacing="10">
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="Membership Date*"/>
                        <DatePicker fx:id="membershipDateField"/>
                    </VBox>
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="Expiry Date"/>
                        <DatePicker fx:id="expiryDateField">
                            <tooltip>
                                <Tooltip text="Optional"/>
                            </tooltip>
                        </DatePicker>
                    </VBox>
                </HBox>
                
                <CheckBox fx:id="activeCheckBox" text="Active Member" selected="true"/>
                
                <HBox spacing="10" style="-fx-padding: 10 0 0 0;">
                    <Button fx:id="addButton" text="Add" onAction="#handleAddMember" HBox.hgrow="ALWAYS" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                    <Button fx:id="updateButton" text="Update" onAction="#handleUpdateMember" HBox.hgrow="ALWAYS" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                    <Button fx:id="deleteButton" text="Delete" onAction="#handleDeleteMember" HBox.hgrow="ALWAYS" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
                    <Button fx:id="clearButton" text="Clear" onAction="#handleClearForm" HBox.hgrow="ALWAYS"/>
                </HBox>
            </VBox>
        </VBox>
    </HBox>
    
    <!-- Status Bar -->
    <Label fx:id="statusLabel" style="-fx-text-fill: #2e7d32; -fx-font-style: italic; -fx-padding: 5 0 0 0;"/>
</VBox>