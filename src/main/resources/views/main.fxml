<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.intellilib.controllers.MainController"
      style="-fx-padding: 20; -fx-background-color: #f5f5f5;">
    
    <Label text="Bienvenue sur IntelliLib" style="-fx-font-size: 20; -fx-font-weight: bold;" />
    <VBox spacing="10" alignment="CENTER">
        <Button fx:id="loginButton" text="Se connecter" onAction="#showLogin" style="-fx-min-width: 200;" />
        <Button fx:id="registerButton" text="S'inscrire" onAction="#showRegister" style="-fx-min-width: 200;" />
    </VBox>
</VBox>